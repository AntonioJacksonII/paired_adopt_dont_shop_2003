
<% if @pet.applications.count == 0 %>

<h1>There are no applications for <%=link_to @pet.name, "/pets/#{@pet.id}" %> yet</h1>

<% else %>

  <h1>Applications For: <%=link_to @pet.name, "/pets/#{@pet.id}"%></h1>

  <body>

    <% @pet.applications.each do |application| %>
      <section class = "applicant-<%= application.id %>">
      <%= link_to "#{application.name}", "/applications/#{application.id}" %>
      <section>
    <% end %>

  </body>

  <% end %>
