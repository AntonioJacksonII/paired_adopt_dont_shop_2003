
<h1>Shelter Info</h1>
<nav class="navigation">

  <%= link_to "See All Shelters", "/shelters", class: "link" %>
  <%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit", class: "link" %>
  <%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete, class: "link" %>
  <%= link_to "See All Pets", "/pets", class: "link" %>
  <%= link_to "View Shelters Pets", "/shelters/#{@shelter.id}/pets", class: "link" %>
  <%= link_to "New Review", "/shelters/#{@shelter.id}/reviews/new", class: "link" %>
  <%= link_to "Favorite Pets: 0", "/favorites", class: "link" %>
</nav>

<body class="display">
  <div class="show">
  <strong>Shelter Name: </strong><%= @shelter.name %><br>

  <strong>Shelter Address: </strong><%= @shelter.address %><br>

  <strong>Shelter City: </strong><%= @shelter.city %><br>

  <strong>Shelter State: </strong><%= @shelter.state %><br>

  <strong>Shelter Zip: </strong><%= @shelter.zip %>
  <div>


    <% @shelter.reviews.each do |review| %>

    <strong>Review Title: </strong><%= review.title %><br>

    <strong>Review Rating: </strong><%= review.rating %><br>

    <strong>Review Description: </strong><%= review.content %><br>

    <strong>Review Picture: </strong><%= review.picture %><br>


    <%= link_to "Delete Review #{review.id}", "/reviews/#{review.id}", method: :delete %>
    <%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit" %>


    <% end %>


</body>
