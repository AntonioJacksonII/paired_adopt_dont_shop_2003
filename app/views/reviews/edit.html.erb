<h1>Edit Review</h1>

<nav class="navigation">
  <%= link_to "Favorite Pets: 0", "/favorites", class: "link" %>
</nav>

<body class="display">
  <%= form_tag("/shelters/#{params[:shelter_id]}", method: :post) do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, "#{@review.title}" %>
  <%= label_tag :rating %>
  <%= text_field_tag :rating, "#{@review.rating}" %>
  <%= label_tag :content %>
  <%= text_field_tag :content, "#{@review.content}" %>
  <%= label_tag :picture %>
  <%= text_field_tag :picture, "#{@review.picture}"  %>

  <%= submit_tag 'Edit Review' %>
  <% end %>
</body>
