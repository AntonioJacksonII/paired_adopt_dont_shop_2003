<h1>Update Pet</h1>

<body class="display">
  <%= form_tag("/pets/#{@pet.id}", method: :patch) do %>
  <%= label_tag :image %>
  <%= text_field_tag :image, nil, value: "#{@pet.image}" %>
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, value: "#{@pet.name}" %>
  <%= label_tag :description %>
  <%= text_field_tag :description, nil, value: "#{@pet.description}" %>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age, nil, value: "#{@pet.approximate_age}" %>
  <%= label_tag :sex %>
  <%= text_field_tag :sex, nil, value: "#{@pet.sex}" %>
  <%= submit_tag 'Update Pet' %>
<% end %>
</body>
